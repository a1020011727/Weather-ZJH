<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626"
        android:id="@+id/title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/title_city"/>
        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#A71717"/>
        <TextView
            android:id="@+id/city_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="菏泽天气"
            android:textColor="#ffffffff"
            android:textSize="22sp"/>
        <ImageView
            android:id="@+id/city_update_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update"
            />
        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toLeftOf="@id/city_update_button"
            android:src="@drawable/title_share"/>
        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical">

        <!--今日天气-->
        <RelativeLayout
            android:id="@+id/Weater_today"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <!--城市名称-->
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:lines="1"
                android:text="菏泽"
                android:textColor="@android:color/white"
                android:textSize="40sp"/>
            <!--时间-->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/city"
                android:layout_marginLeft="15dp"
                android:lines="1"
                android:text="今天上午八点发布"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
            <!--湿度信息-->
            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/time"
                android:layout_marginLeft="15dp"
                android:lines="1"
                android:text="湿度：75%"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
            <!--PM2.5-->
            <LinearLayout
                android:id="@+id/PM2.5_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <!--pm2.5详情-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp">
                    <!--PM2.5文字-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--pm2.5-->
                        <TextView
                            android:id="@+id/pm2.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="PM2.5"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"/>

                        <!--pm2.5数值-->
                        <TextView
                            android:id="@+id/pm2.5_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="20"
                            android:textColor="@android:color/white"
                            android:textSize="30sp"/>

                    </LinearLayout>
                    <!--PM2.5图片-->
                    <ImageView
                        android:id="@+id/pm2.5_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/biz_plugin_weather_0_50"
                        />

                </LinearLayout>

                <!--污染等级-->
                <TextView
                    android:id="@+id/pm2.5_quality"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:text="优秀"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>
            </LinearLayout>
            <!--今日天气信息-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/humidity"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp">

                <!--天气情况照片-->
                <ImageView
                    android:id="@+id/weather_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/biz_plugin_weather_qing"/>

                <!--今日日期-->
                <TextView
                    android:id="@+id/week_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/weather_img"
                    android:lines="1"
                    android:text="今天 星期三"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <!--温度范围-->
                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/week_today"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/weather_img"
                    android:lines="1"
                    android:text="-2℃-7℃"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    />

                <!--天气状况-->
                <TextView
                    android:id="@+id/climate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/temperature"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/weather_img"
                    android:lines="1"
                    android:text="多云转晴"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    />

                <!--风力信息-->
                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/climate"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/weather_img"
                    android:lines="1"
                    android:text="微风"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
